<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:TimeBankCU.Views"
       x:Class="TimeBankCU.AppShell"
       Shell.TabBarBackgroundColor="#FFFFFF"
       Shell.TabBarForegroundColor="#888888"
       Shell.TabBarTitleColor="#333333"
       Shell.TabBarUnselectedColor="#BBBBBB"
       Shell.TabBarDisabledColor="#DDDDDD">

    <!-- 🧭 Bottom Tab Navigation -->
    <TabBar>
        <!-- 🏠 Home -->
        <ShellContent
            Title="Home"
            Icon="home.png"
            ContentTemplate="{DataTemplate views:MainPage}"
            Route="main" />

        <!-- ✅ Tasks -->
        <ShellContent
            Title="Task"
            Icon="task.png"
            ContentTemplate="{DataTemplate views:TaskPage}"
            Route="task" />

        <!-- 📅 Calendar -->
        <ShellContent
            Title="Calendar"
            Icon="calendar.png"
            ContentTemplate="{DataTemplate views:CalendarPage}"
            Route="calendar" />

        <!-- 👤 Me -->
        <ShellContent
            Title="Me"
            Icon="me.png"
            ContentTemplate="{DataTemplate views:MePage}"
            Route="me" />
    </TabBar>

</Shell>