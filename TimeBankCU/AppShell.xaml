<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:TimeBankCU.Views"
       x:Class="TimeBankCU.AppShell">

    <!-- Shell navigation using tabbed structure -->
    <TabBar>
        <ShellContent
            Title="Home"
            Icon="home.png"
            ContentTemplate="{DataTemplate views:MainPage}"
            Route="main" /> <!-- Main page route -->

        <ShellContent
            Title="Tasks"
            Icon="tasks.png"
            ContentTemplate="{DataTemplate views:TaskPage}"
            Route="tasks" /> <!-- Tasks page route -->

        <ShellContent
            Title="Calendar"
            Icon="calendar.png"
            ContentTemplate="{DataTemplate views:CalendarPage}"
            Route="calendar" /> <!-- Calendar page route -->

        <ShellContent
            Title="Me"
            Icon="me.png"
            ContentTemplate="{DataTemplate views:MePage}"
            Route="me" /> <!-- Me page route -->
    </TabBar>

</Shell>