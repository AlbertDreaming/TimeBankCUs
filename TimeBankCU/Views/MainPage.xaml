<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimeBankCU.Views.MainPage"
             Title="Task Manager"
             xmlns:viewmodels="clr-namespace:TimeBankCU.ViewModels"
             x:DataType="viewmodels:MainViewModel">

    <ContentPage.BindingContext>
        <viewmodels:MainViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout>

            <!-- Top Search Bar -->
            <SearchBar Placeholder="Search tasks or content..."
                       Text="{Binding SearchQuery}" 
                       SearchCommand="{Binding SearchCommand}" />

            <!-- Image Carousel -->
            <CarouselView ItemsSource="{Binding CarouselItems}">
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <Image Aspect="AspectFill" Source="{Binding ImageUrl}" />
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>

            <!-- Navigation Menu -->
            <ScrollView Orientation="Horizontal">
                <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                    <Button Text="Post" Command="{Binding NavigateCommand}" CommandParameter="Post" />
                    <Button Text="Accept" Command="{Binding NavigateCommand}" CommandParameter="Accept" />
                    <Button Text="Credit" Command="{Binding NavigateCommand}" CommandParameter="Credit" />
                </StackLayout>
            </ScrollView>

            <!-- Task Display Area -->
            <CollectionView ItemsSource="{Binding TaskItems}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="Gray" CornerRadius="10" Padding="10">
                            <StackLayout>
                                <Image Aspect="AspectFill" HeightRequest="100" Source="{Binding ImageUrl}" />
                                <Label Text="{Binding Title}" FontAttributes="Bold" />
                                <Label Text="{Binding Description}" />
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Bottom Navigation Bar -->
            <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" BackgroundColor="LightGray" Padding="5">
                <Button Text="Article" HorizontalOptions="FillAndExpand" Command="{Binding NavigateCommand}" CommandParameter="Article" />
                <Button Text="Task" HorizontalOptions="FillAndExpand" Command="{Binding NavigateCommand}" CommandParameter="Task" />
                <Button Text="Calendar" HorizontalOptions="FillAndExpand" Command="{Binding NavigateCommand}" CommandParameter="Calendar" />
                <Button Text="Me" HorizontalOptions="FillAndExpand" Command="{Binding NavigateCommand}" CommandParameter="Me" />
            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>